<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="12dp" android:gravity="center_vertical">

    <!-- 日期 -->
    <LinearLayout android:layout_width="80dp" android:layout_height="wrap_content" android:orientation="vertical">

        <TextView android:id="@+id/dateText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@android:color/white" android:textSize="16sp" android:text="今天"/>

        <TextView android:id="@+id/dateDetailText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:textColor="#AAFFFFFF" android:textSize="12sp" android:text="12/31"/>
    </LinearLayout>

    <!-- 天气图标和描述 -->
    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center_vertical" android:orientation="horizontal">

        <!-- 天气图标（emoji） -->
        <TextView android:id="@+id/weatherIcon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="20sp" android:text="☀️"/>

        <TextView android:id="@+id/weatherText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="8dp" android:textColor="#AAFFFFFF" android:textSize="14sp" android:text="晴"/>
    </LinearLayout>

    <!-- 温度范围 -->
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">

        <!-- 最低温度 -->
        <TextView android:id="@+id/tempMinText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#80FFFFFF" android:textSize="16sp" android:text="20°"/>

        <!-- 温度进度条 -->
        <View android:id="@+id/tempProgressBar" android:layout_width="48dp" android:layout_height="3dp" android:layout_marginHorizontal="8dp" android:background="#33FFFFFF"/>

        <!-- 最高温度 -->
        <TextView android:id="@+id/tempMaxText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@android:color/white" android:textSize="16sp" android:text="25°"/>
    </LinearLayout>

</LinearLayout> 
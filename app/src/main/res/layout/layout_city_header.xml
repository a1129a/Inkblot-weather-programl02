<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center_vertical" android:orientation="horizontal" android:paddingHorizontal="16dp" android:paddingTop="48dp" android:paddingBottom="16dp">

    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">

        <TextView android:id="@+id/cityNameText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="北京市" android:textAppearance="@style/TextAppearance.App.TitleLarge" android:textColor="@android:color/white" />

        <TextView android:id="@+id/cityAddressText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="北京市 朝阳区" android:textAppearance="@style/TextAppearance.App.Caption" android:textColor="#CCFFFFFF" />

    </LinearLayout>

    <ImageButton android:id="@+id/settingsButton" android:layout_width="48dp" android:layout_height="48dp" android:background="?attr/selectableItemBackgroundBorderless" android:contentDescription="设置" android:src="@android:drawable/ic_menu_manage" android:tint="@android:color/white" />

</LinearLayout> 